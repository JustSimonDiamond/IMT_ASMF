        <arguments>
          <argument>
            <kind>1</kind>
            <string>///Handles Mario's sprites

//If Mario is not ducking
if crouch = 0
{

    //Select Mask
    mask_index = spr_smallmask

    //Standing State
    if state = 0
    {
        //Default Standing
        image_speed = 0.15
        sprite_index = spr_px_mario_idle       
    }

        //Walking State
        else if state = 1
        {

            //Animate based on horizontal speed
            image_speed = abs(hspeed/10)

            //Skid when moving and facing in opposite directions
            if (xscale = 1 and hspeed &lt; -0.001)
            or (xscale = -1 and hspeed &gt; 0.001)
            {
                sprite_index = spr_px_mario_skid
                if skidnow = 0
                {
                    skidnow = 1
                    audio_play_sound(snd_skid,1,1)
                }
            }

            //Default Walking
            else
            {

                //Run only when P-Meter is full
                if global.pmeter &lt; 6
                    sprite_index = spr_px_mario_walk
                else
                    sprite_index = spr_px_mario_walk

            }

        }

        //Jumping State
        else if state = 2
        {

            //Swimming
            if swimming = 1
            {
                sprite_index = spr_px_mario_swim
                if vspeed &lt; 0
                    image_index = 2+(vspeed/4)
                else
                    image_index = 0+(vspeed/1)
                

            }

            //Default Jumping
            else
            {

                //Super Crown Mario floating
                /*if global.player = 3
                and vspeed &gt;= 0
                {
                    if vspeed &gt; 0
                    {
                        sprite_index = spr_px_peach_jump
                        image_index = 0
                    }
                    else
                    {
                        sprite_index = spr_px_peach_jump
                        image_index = 1
                    }
                }
                */

                //Run only when P-Meter is full
                if global.pmeter &lt; 6
                {
                    sprite_index = spr_px_mario_jump
                    if vspeed &gt; 0
                        image_index = 1
                    else
                        image_index = 0
                }
                else
                {
                    sprite_index = spr_px_mario_jump
                    if vspeed &gt; 0
                        image_index = 1
                    else
                        image_index = 0
                }

            }

        }

    //Climbing
    else if state = 3
    {
        if speed = 0
            image_speed = 0
        else
            image_speed = 0.15
        sprite_index = spr_px_mario_climb
    }

    //Wall Climbing + Wall Jumping
    else if state = 4
    {

        //Wall Jumping
        {
            sprite_index = spr_px_mario_skid
            if skidnow = 0
            {
                skidnow = 1
            }
        }

    }

    //Kicking Animation
    if kicking = 1
        sprite_index = scr_px_walk()

}

//If Mario is ducking
else if crouch = 1
{

    //Use Small Mask
    mask_index = spr_smallmask

    //Default Ducking
    sprite_index = spr_px_mario_duck

}

//Stop the skid sound effect
if sprite_index != scr_px_skid()
and skidnow = 1
{
    audio_stop_sound(snd_skid)
    skidnow = 0
}
</string>
