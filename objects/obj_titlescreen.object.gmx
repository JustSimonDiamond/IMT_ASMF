            <kind>1</kind>
            <string>///Draw the title screen

//Draw the box
draw_sprite_ext(spr_titlescreen,-1,x,y,1,1,0,c_white,0.7)

//Set the font
draw_set_font(global.messagefont)

//If the powered by text is not faded out
if (fade != 0)
{

    //Set the alpha
    draw_set_alpha(fade);
    draw_text(view_xview[0]+2, view_yview[0]+2, string(cs_version));

}

//Center the text
draw_set_halign(fa_center)

//Set the font
draw_set_font(global.font)

//Set the aplha
draw_set_alpha(0.7)

//Iterate over the menu items
for(var i = 0; i &lt; 3; i++)
{

    //Make the text gold if it is the selected one
    if menu_choice = i
        menu[i] = string_lower(menu[i])

    //Otherwise, make the text white
    else
        menu[i] = string_upper(menu[i])

    //Draw the text
    draw_text(x,y-20+i*16,menu[i])

}

//Reset text alignment
draw_set_halign(fa_left)

//Reset alpha
draw_set_alpha(1)
</string>
