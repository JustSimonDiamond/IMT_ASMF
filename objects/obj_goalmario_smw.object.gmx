            <string>///Take points off time and add it to score

//If the time is greater than 4, decrement 5 seconds from timer
if (global.timer &gt; 4) {

    //Repeat the process
    alarm[3] = 2;

    //Get 250 points
    score += 250;
    
    //Decrement 5 seconds
    global.timer -= 5;
}

//Otherwise, decrement timer by 1 second
else if ((global.timer &lt; 5) &amp;&amp; (global.timer &gt; 0)) {

    //Repeat the process
    alarm[3] = 2;

    //Get 50 points
    score += 50;
    
    //Decrement 1 second
    global.timer--;
}

//Play 'Count' sounds
if (ready4 == 0) {

    //If the timer is greater than 0
    if (global.timer &gt; 0) {
    
        ready4 = 1;
        audio_play_sound(snd_count, 0, true);
    }
    else {
    
        ready4 = 2;
        audio_play_sound(snd_countend, 0, false);
    }
}
else if ((global.timer &lt; 1) &amp;&amp; (ready4 == 1)) {

    ready4 = 2;
    audio_stop_sound(snd_count);
    audio_play_sound(snd_countend, 0, false);
}    
