    //If the player is not moving horizontally
    if (hspeed == 0) {
    
        //If the player is doing the victory pose
        if (ready2 == 1) {
    
            //Set clear pose
            sprite_index = scr_marioclear();
            
            //Do not animate
            image_speed = 0;
            image_index = 0;
        }
        
        //Otherwise, set the idle pose
        else {
        
