            sprite_index = scr_mariowalk();
            
            //Do not animate
            image_speed = 0;
            image_index = 0;            
        }
    }
    
    //Otherwise
    else {
    
        //Set clear pose
        sprite_index = scr_mariowalk();
        
        //Animate yoshi
        anim += 0.065+abs(hspeed)/7.5;
                
        //Animate
        image_speed = 0.065+abs(hspeed)/7.5;
    }
}
else {

    //Set the jump sprite
    sprite_index = scr_mariojump();
    
    //Do not animate
    image_speed = 0;
    
    //Set the frame
    if (vspeed &lt; 0)
        image_index = 0;
