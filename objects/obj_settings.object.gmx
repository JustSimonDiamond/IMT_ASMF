        <arguments>
          <argument>
            <kind>1</kind>
            <string>///Settings Menu

//Si se elige a la opción N.1
if menu_choice = 0
{
    //Si el tamaño de ventana es 1
    if obj_persistent.filter = 0
    {   
        with obj_persistent {
            filter = 1
            message = "TAMANO X2"
            alarm[5] = 1
        }
    }
    
    //Si este es 2
    else if obj_persistent.filter = 1
    {
        with obj_persistent {
            filter = 2
            message = "TAMANO X4"
            alarm[5] = 1
        }
    }
    
    //Si es 3
    else if obj_persistent.filter = 2
    {
        with obj_persistent {
            filter = 0
            message = "TAMANO X1"
            alarm[5] = 1
        }
    }
    //Reiniciar el texto después de dos segundos
    with (obj_persistent) alarm[3] = 120
}
//Si se elige la segunda opción
else if menu_choice = 1
{
    with obj_persistent
    {
        //Vsync
        vsync = !vsync
        if vsync
            message = "VSYNC ENCENDIDO"
        else
            message = "VSYNC APAGADO"
        event_user(1)
        alarm[3] = 120
    }
}
//Si se elige la opción 3
else if menu_choice = 2 {

    //Si el idioma es español
    if global.lang = 1 {
    
        //Se cambia a gringolandia
        global.lang = 0
    }
    //Si el idioma es inglés
    else if global.lang = 0 {
    
        //Se cambia a maincrito
        global.lang = 1
    }
    //Detener todo sonido
    audio_stop_all()
    
    //E ir a la pantalla de inicio
    if (instance_number(obj_fadein) == 0)
        with (instance_create(0,0,obj_fadein)) target = rm_disclaimer;
}
</string>
