            <kind>1</kind>
            <string>///El menú de configuración

//Apagar a la pantalla de inicio
instance_deactivate_object(obj_titlescreen)

//Desactivar al Mario del título
if (instance_exists(obj_titlemario)) {
    with (obj_titlemario) disable = 1;
}
//Reproducir el sonido de mensaje
audio_play_sound(snd_message,0,0)

//Opción elegida
menu_choice = 0

//Mensaje
message = ""

//Texto
switch(global.lang) {

    case(1): {
        menu[0] = "Tamano de Ventana";
        menu[1] = "VSync";
        menu[2] = "Ingles";
    } break;
    
    default: {
        menu[0] = "Windows Size";
        menu[1] = "VSync";
        menu[2] = "Spanish";
    } break;
}
